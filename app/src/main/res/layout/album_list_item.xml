<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <ImageView
            android:id="@+id/vImageAlbum"
            android:layout_width="@dimen/album_list_size"
            android:layout_height="@dimen/album_list_size"
            android:layout_marginBottom="@dimen/album_list_vertical_margin1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/album_list_vertical_margin1"
            android:background="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/album_list_vertical_margin3"
            android:contentDescription="@string/content_description_icon_album"
    />

    <TextView android:id="@+id/vTextAlbumName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="Название альбома"
              android:textSize="@dimen/textsize2"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginEnd="@dimen/album_list_vertical_margin1"
              android:layout_marginTop="@dimen/album_list_vertical_margin3"
              app:layout_constraintStart_toEndOf="@+id/vImageAlbum"
              android:layout_marginStart="@dimen/album_list_vertical_margin1"/>
    <!--app:layout_constraintEnd_toStartOf="@+id/vButtonPrice"-->

    <TextView android:id="@+id/vTextArtist"
              tools:text="Исполнитель"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/vTextAlbumName"
              android:textSize="@dimen/textsize3"
              android:layout_marginEnd="@dimen/album_list_vertical_margin1"
              app:layout_constraintStart_toEndOf="@+id/vImageAlbum"
              android:layout_marginStart="@dimen/album_list_vertical_margin1"/>
